-- Configurações de FPS Boost e Otimização Gráfica
local Lighting = game:GetService("Lighting")
local Players = game:GetService("Players")
local Terrain = workspace:FindFirstChild("Terrain")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Remover efeitos visuais desnecessários
for _, v in ipairs(Lighting:GetChildren()) do
    if v:IsA("PostEffect") then
        v:Destroy()
    end
end

-- Configurações de iluminação
Lighting.GlobalShadows = false
Lighting.FogEnd = 9e9
Lighting.Brightness = 2

-- Otimizar partes e texturas
local function handleInstance(instance)
    if instance:IsA("BasePart") then
        local player = Players.LocalPlayer
        if player and player.Character and instance:IsDescendantOf(player.Character) then
            return
        end
        instance.Material = Enum.Material.SmoothPlastic
        instance.Reflectance = 0
    end
    if instance:IsA("Texture") or instance:IsA("Decal") then
        local player = Players.LocalPlayer
        if player and player.Character and instance:IsDescendantOf(player.Character) then
            return
        end
        instance.Transparency = 1
    end
end

for _, instance in ipairs(workspace:GetDescendants()) do
    handleInstance(instance)
end

-- Configurações de terreno
if Terrain then
    Terrain.WaterWaveSize = 0
    Terrain.WaterWaveSpeed = 0
    Terrain.WaterReflectance = 0
    Terrain.WaterTransparency = 1
end

-- Configurações de física e renderização
settings().Physics.AllowSleep = true
settings().Rendering.QualityLevel = 1 -- Define a qualidade gráfica para o nível mais baixo
settings().Rendering.EagerBulkExecution = false

-- Configurações de jogo (multiplicadores e toggles)
ReplicatedStorage.Settings.Multipliers.RagdollPower.Value = 80
ReplicatedStorage.Settings.Multipliers.KnockbackPower.Value = 80
ReplicatedStorage.Settings.Multipliers.AvatarScale.Value = 999
ReplicatedStorage.Settings.Multipliers.RegenRate.Value = 10
ReplicatedStorage.Settings.Multipliers.MeleeSpeed.Value = 117
ReplicatedStorage.Settings.Cooldowns.Evasive.Value = 0.5
ReplicatedStorage.Settings.Cooldowns.Melee.Value = 0.5
ReplicatedStorage.Settings.Toggles.NoJumpFatigue.Value = true
ReplicatedStorage.Settings.Toggles.NoSlowdowns.Value = true
ReplicatedStorage.Settings.Toggles.NoStunOnMiss.Value = true
ReplicatedStorage.Settings.Toggles.DisableCombatTimer.Value = true
ReplicatedStorage.Settings.Toggles.AllowAllPackages.Value = false
ReplicatedStorage.Settings.Multipliers.WalkSpeed.Value = 115
ReplicatedStorage.Settings.Toggles.UsableWithoutCharge.Value = true
game:GetService("ReplicatedStorage").Settings.Toggles.DisableHitStun.Value = true

local keyBind = Enum.KeyCode.E
local blockSpeed = 6
local blockAnimation = "Block"
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local rootPart = character:WaitForChild("HumanoidRootPart")
local blockAnimationTrack = nil

humanoid.PlatformStand = true
humanoid.WalkSpeed = blockSpeed

if blockAnimation then
    local animator = humanoid:FindFirstChildOfClass("Animator")
    if animator then
        blockAnimationTrack = animator:LoadAnimation(ReplicatedStorage.Core:WaitForChild("Animations"):WaitForChild(blockAnimation))
        blockAnimationTrack.Priority = Enum.AnimationPriority.Action4
        blockAnimationTrack:Play()
    end
end

game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = "Exploit de Bloqueio",
    Text = "Bloqueio ativado permanentemente!",
    Duration = 5
})

game:GetService("RunService").Heartbeat:Connect(function()
    humanoid.PlatformStand = true
    humanoid.WalkSpeed = blockSpeed
end)

-- Sistema de Slow Motion
local function SlowMotion()
    local runService = game:GetService("RunService")
    local slowFactor = 0.5

    runService.Heartbeat:Connect(function(deltaTime)
        workspace.DistributedGameTime = workspace.DistributedGameTime + deltaTime * slowFactor
    end)
end

SlowMotion()

-- Sistema de Hitbox (usando Hitblox)
loadstring(game:HttpGet("https://raw.githubusercontent.com/hm5650/Hitblox/refs/heads/main/Hitblox"))()

-- Notificação de sucesso
game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = "Script Carregado",
    Text = "FPS Boost, Bloqueio, Slow Motion e Hitbox ativados!",
    Duration = 5
})
